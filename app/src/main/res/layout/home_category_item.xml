<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_image_iv"
        android:layout_width="@dimen/dimen_105dp"
        android:layout_height="@dimen/dimen_126dp"
        android:src="@drawable/item3"
        android:padding="@dimen/dimen_5dp"
        android:scaleType="fitXY"
        app:riv_corner_radius="@dimen/dimen_10dp"
        app:layout_constraintCircle="@dimen/dimen_23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:background="@drawable/no_path_copy_34"
        app:layout_constraintTop_toTopOf="@id/item_image_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_image_iv"
        app:layout_constraintStart_toStartOf="@id/item_image_iv"
        app:layout_constraintEnd_toEndOf="@id/item_image_iv"/>

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/name"
        android:textSize="@dimen/dimen_14sp"
        android:fontFamily="@font/mont_serrat_bold"
        android:layout_marginBottom="@dimen/dimen_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>