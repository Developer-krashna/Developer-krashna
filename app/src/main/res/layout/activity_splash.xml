<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

    <!--<ImageView
        android:id="@+id/splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:foreground="@color/trans_black"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:src="@drawable/img"
        android:layout_marginBottom="@dimen/dimen_128dp"/>-->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_128dp"/>

    <com.rd.PageIndicatorView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:piv_animationType="worm"
        app:piv_radius="@dimen/dimen_5dp"
        app:piv_strokeWidth="@dimen/dimen_5dp"
        app:piv_viewPager="@id/viewPager_bg"
        app:piv_selectedColor="@color/white"
        android:layout_marginTop="@dimen/dimen_75dp"
        android:layout_marginLeft="@dimen/dimen_28dp"
        app:piv_unselectedColor="@color/color_light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/splash_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:src="@drawable/grinhits_text"
        app:layout_constraintTop_toTopOf="@id/viewPager_bg"
        app:layout_constraintBottom_toBottomOf="@id/viewPager_bg"
        app:layout_constraintStart_toStartOf="@id/viewPager_bg"
        app:layout_constraintEnd_toEndOf="@id/viewPager_bg"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_started_btn"
        android:layout_width="@dimen/dimen_184dp"
        android:layout_height="@dimen/dimen_52dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/mont_serrat_medium"
        android:text="@string/get_started"
        android:textSize="@dimen/dimen_14sp"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:drawableRight="@drawable/arrow_white"
        android:background="@drawable/gradient_green_btn"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_bg"
        app:layout_constraintBottom_toBottomOf="@id/viewPager_bg"
        app:layout_constraintStart_toStartOf="@id/viewPager_bg"
        app:layout_constraintEnd_toEndOf="@id/viewPager_bg"/>


    <View
        android:layout_width="@dimen/dimen_134dp"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@color/color_grey_line"
        android:layout_marginBottom="@dimen/dimen_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/skip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="@color/white"
        android:fontFamily="@font/varela_round_regular"
        android:textSize="@dimen/dimen_18sp"
        android:layout_marginRight="@dimen/dimen_23dp"
        android:layout_marginTop="@dimen/dimen_70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:fontFamily="@font/mont_serrat_bold"
        android:textSize="@dimen/dimen_32sp"
        android:layout_marginRight="@dimen/dimen_23dp"
        android:layout_marginTop="@dimen/dimen_138dp"
        app:layout_constraintTop_toBottomOf="@+id/splash_front"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>